<div>
  <ol class="posts">
    <%= render @post %>
  </ol>
  <h3>Comments</h3>
  <div class="comments" id="comment_form">
    <%= render @comments %>
  </div>
  <% if current_user?(nil) || current_user?(@user) || current_user.following?(@user) %>  
    <%= render 'comments/form' %>
  <% end %>
</div>
